@page
   @model SchoolManagementSystem.Pages.Students.IndexModel

<h2>Students</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@student.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@student.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-page="./Create">Create New</a>